<h1><%= @place.name %></h1>

<% if @entries.any? %>
  <ul>
    <% for entry in @entries %>
      <li>
        <h3><%= entry.title %></h3>
        <p><%= entry.posted_on %></p>
        <h4><%= entry.description %></h4>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No posts available</p>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to Places</a></p>
